<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg"
    android:orientation="vertical">

    <include layout="@layout/base_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_gray_1" />

    <TextView
        android:id="@+id/welcome_title"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:textColor="@color/text_color1"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_gray_1" />

    <RelativeLayout
        android:id="@+id/reward_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/reward_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="30dp"
            android:text="0.00"
            android:textColor="@color/button_color"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/reward_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reward_money"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="10dp"
            android:text="@string/reword_money"
            android:textColor="@color/text_color1"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_gray_1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/divider_gray_1" />

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reward_layout"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_partner_reword"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:drawablePadding="6dp"
            android:drawableRight="@drawable/icon_enter"
            android:gravity="left|center"
            android:paddingLeft="24dp"
            android:paddingRight="18dp"
            android:text="@string/partner_reward"
            android:textColor="@color/text_color1" />

        <View
            android:id="@+id/v2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_partner_reword"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:background="#E2E2E2"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/tv_partner_friend"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_below="@+id/v2"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:drawablePadding="6dp"
            android:drawableRight="@drawable/icon_enter"
            android:gravity="left|center"
            android:paddingLeft="24dp"
            android:paddingRight="18dp"
            android:text="@string/partner_friend"
            android:textColor="@color/text_color1" />

        <View
            android:id="@+id/v3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_partner_friend"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:background="#E2E2E2"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/tv_partner_intend"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_below="@+id/v3"
            android:background="@color/white"
            android:drawablePadding="6dp"
            android:drawableRight="@drawable/icon_enter"
            android:gravity="left|center"
            android:paddingLeft="24dp"
            android:paddingRight="18dp"
            android:text="@string/partner_intend"
            android:textColor="@color/text_color1" />

        <View
            android:id="@+id/v4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_partner_intend"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:background="#E2E2E2"
            android:orientation="vertical" />

        <RelativeLayout
            android:id="@+id/rl_partner_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v4">

            <TextView
                android:id="@+id/tv_partner_add"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:drawablePadding="6dp"
                android:drawableRight="@drawable/icon_enter"
                android:gravity="left|center"
                android:paddingLeft="24dp"
                android:paddingRight="18dp"
                android:text="@string/partner_add"
                android:textColor="@color/text_color1" />

            <TextView
                android:id="@+id/has_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="18dp"
                android:text="@string/has_added"
                android:textSize="14sp"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:id="@+id/v6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rl_partner_add"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:background="#E2E2E2"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/tv_my_qrcode"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_below="@+id/v6"
            android:background="@color/white"
            android:drawablePadding="6dp"
            android:drawableRight="@drawable/icon_enter"
            android:gravity="left|center"
            android:paddingLeft="24dp"
            android:paddingRight="18dp"
            android:text="@string/my_qrcode"
            android:textColor="@color/text_color1" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_gray_1" />

</LinearLayout>


