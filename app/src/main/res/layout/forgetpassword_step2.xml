<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg"
    android:orientation="vertical">

    <include layout="@layout/base_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/background_color_F7" />


    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_below="@id/rl1"
        android:background="@color/white"
        android:paddingLeft="18dp">


        <EditText
            android:id="@+id/password_et1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/button_clear2"
            android:background="@null"
            android:hint="@string/modify_password1"
            android:maxLength="18"
            android:paddingLeft="12dp"
            android:password="true"
            android:textColorHint="@color/label_grey1"
            android:textSize="16sp" />


        <ImageButton
            android:id="@+id/button_clear2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/icon_delete"
            android:visibility="invisible" />

    </RelativeLayout>

    <View
        android:id="@+id/v3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E2E2E2" />


    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_below="@id/rl2"
        android:background="@color/white"
        android:paddingLeft="18dp">


        <EditText
            android:id="@+id/password_et2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/mobile_tv1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/mobile_tv1"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/button_clear"
            android:layout_toRightOf="@id/mobile_tv1"
            android:background="@null"
            android:hint="@string/modify_password2"
            android:maxLength="18"
            android:paddingLeft="12dp"
            android:password="true"
            android:textColorHint="@color/label_grey1"
            android:textSize="16sp" />


        <ImageButton
            android:id="@+id/button_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/icon_delete"
            android:visibility="invisible" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E2E2E2" />

    <RelativeLayout
        android:id="@+id/rl4"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/rl3"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="22dp">


        <TextView
            android:id="@+id/password_info1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/icon_note"
            android:paddingLeft="6dp"
            android:gravity="left|center"
            android:text="@string/password_info1"
            android:textColor="@color/text_color3" />

        <RelativeLayout
            android:id="@+id/rl7"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/password_info1"
            android:paddingTop="22dp">

            <Button
                android:id="@+id/confirm_modify_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_radius"
                android:enabled="false"

                android:text="@string/confirm_modify"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/white"
                android:textSize="18dp"/>
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>