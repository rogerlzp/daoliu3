<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg"
    android:orientation="vertical">

    <include
        android:id="@+id/top_layout"
        layout="@layout/base_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/background_color1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll2"
        android:layout_below="@+id/top_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/background_color1" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="49dp">

                <TextView
                    android:id="@+id/tv_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="24dp"
                    android:gravity="center"
                    android:text="应付金额"
                    android:textColor="@color/text_color1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_pay_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_pay"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/tv_pay"
                    android:layout_marginRight="24dp"
                    android:gravity="center"
                    android:textColor="@color/text_color1"
                    android:textSize="16sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="24dp"
                android:background="#E2E2E2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="49dp">

                <TextView
                    android:id="@+id/tv_daishou_shouyi"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="24dp"
                    android:gravity="center"
                    android:text="待收收益"
                    android:textColor="@color/text_color1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_daishou_shouyi_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_daishou_shouyi"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/tv_daishou_shouyi"
                    android:layout_marginRight="24dp"
                    android:gravity="center"
                    android:textColor="@color/text_color1"
                    android:textSize="16sp" />

            </RelativeLayout>

            <View
                android:id="@+id/v3"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="24dp"
                android:background="#E2E2E2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="49dp">


                <TextView
                    android:id="@+id/tv_deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="24dp"
                    android:gravity="center"
                    android:text="到期日期"
                    android:textColor="@color/text_color1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_deadline_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_deadline"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/tv_deadline"
                    android:layout_marginRight="24dp"
                    android:gravity="center"
                    android:textColor="@color/text_color1"
                    android:textSize="16sp" />

            </RelativeLayout>

            <View
                android:id="@+id/bird_coin_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="24dp"
                android:background="@color/background_color1" />


            <RelativeLayout
                android:id="@+id/rl_birdcoin"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginTop="1dp">

                <TextView
                    android:id="@+id/tv_birdcoin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="24dp"
                    android:layout_toLeftOf="@+id/toggleButton"
                    android:gravity="left|center"
                    android:textColor="@color/text_color1"
                    android:textSize="16sp" />

                <com.wash.daoliu.view.UISwitchButton
                    android:id="@+id/toggleButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="24dp"
                    android:background="@color/transparent"
                    android:checked="false"
                    android:textOff=""
                    android:textOn="" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E2E2E2" />

            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_below="@id/tv_birdcoin"
                android:background="@color/normal_bg">


                <TextView
                    android:id="@+id/tv_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="24dp"
                    android:gravity="center"
                    android:text="请选择理财金券"
                    android:textColor="@color/text_color1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_coupon_other"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24dp"
                    android:gravity="center"
                    android:text="选择其他理财金券"
                    android:textColor="@color/recommend"
                    android:textSize="16sp"
                    android:visibility="gone"

                    />

            </RelativeLayout>


            <View
                android:id="@+id/v5"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/background_color1" />
            <RelativeLayout
                android:id="@+id/rl_coupon1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_coupon_name_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="24dp"

                    android:textColor="@color/text_color1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_coupon_condition_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_coupon_name_1"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="8dp"
                    android:text="返现金券500元"
                    android:textColor="@color/text_color1"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_coupon_deadline_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/tv_coupon_condition_1"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/text_color1"
                    android:textSize="12sp" />


                <ImageView
                    android:id="@+id/iv_coupon_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="24dp" />


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_coupon2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:background="@color/white">

            <View
                android:id="@+id/v7"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="24dp"
                android:background="#E2E2E2" />
                <TextView
                    android:id="@+id/tv_coupon_name_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="24dp"
                    android:textColor="@color/text_color1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_coupon_condition_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_coupon_name_2"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/text_color1"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_coupon_deadline_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/tv_coupon_condition_2"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/text_color1"
                    android:textSize="12sp" />


                <ImageView
                    android:id="@+id/iv_coupon_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="24dp"
                    android:background="@drawable/icon_choice" />


            </RelativeLayout>
            <TextView
                android:id="@+id/tv_hint_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_deposit"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@drawable/icon_note"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="@string/product_buy_nopwd_note"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/text_color3"
                android:layout_marginTop="5dp"
                android:textSize="12dp" />

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/trust_check_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/checkbox_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/check_textview_selector"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="我已同意" />

            <TextView
                android:id="@+id/trust_html"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/checkbox_agreement"
                android:gravity="center_vertical"
                android:text="《投资协议》"
                android:textColor="@color/recommend" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll6"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_below="@+id/trust_check_layout"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_buyamount"
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_marginLeft="2dp"
                android:layout_weight="2"
                android:background="@null"
                android:gravity="left|center"
                android:paddingLeft="24dp"
                android:textColor="@color/text_color2"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_buy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_radius_no_round"
                android:enabled="true"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="18sp"
                android:text="确认"
                android:textColor="@color/white" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>