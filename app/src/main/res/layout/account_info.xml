<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg"
    android:orientation="vertical">

    <include android:id="@+id/base_layout"
        layout="@layout/base_title"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/normal_bg"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="32dp"
                    android:paddingTop="16dp"
                    android:drawableLeft="@drawable/icon_opinion"
                    android:drawablePadding="15dp"
                    android:drawableRight="@drawable/icon_enter"
                    android:gravity="left|center"
                    android:textColor="@color/black"
                    android:paddingRight="15dp"
                    android:text="意见反馈"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="32dp"
                    android:background="@color/background_color1" />

                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:drawableLeft="@drawable/icon_score"
                    android:drawableRight="@drawable/icon_enter"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="32dp"
                    android:paddingTop="16dp"
                    android:drawablePadding="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/black"
                    android:text="去评分"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/background_color1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="57dp"
                android:background="@color/white"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/background_color1" />

                <TextView
                    android:id="@+id/tv_about"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:drawableLeft="@drawable/icon_aboutus"
                    android:drawableRight="@drawable/icon_enter"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="32dp"
                    android:paddingTop="16dp"
                    android:drawablePadding="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/black"
                    android:text="@string/about_us"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="32dp"
                    android:background="@color/background_color1" />

                <TextView
                    android:id="@+id/tv_help"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:drawableLeft="@drawable/icon_help"
                    android:drawableRight="@drawable/icon_enter"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="32dp"
                    android:paddingTop="16dp"
                    android:drawablePadding="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/black"
                    android:text="帮助中心"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="32dp"
                    android:background="@color/background_color1" />

                <RelativeLayout
                    android:id="@+id/tv_phone"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:drawableLeft="@drawable/icon_phone"

                        android:layout_marginLeft="32dp"
                        android:paddingTop="16dp"
                        android:drawablePadding="15dp"
                        android:paddingRight="15dp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:text="客服电话"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/icon_enter"
                        android:gravity="center_vertical"
                        android:text="400" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="32dp"
                    android:visibility="gone"
                    android:background="@color/background_color1" />

                <RelativeLayout
                    android:id="@+id/rl_business"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:drawableLeft="@drawable/icon_business"
                        android:gravity="center_vertical"

                        android:layout_marginLeft="32dp"
                        android:paddingTop="16dp"
                        android:drawablePadding="15dp"
                        android:paddingRight="15dp"
                        android:textColor="@color/black"

                        android:text="商务合作"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/icon_enter"
                        android:gravity="center_vertical"
                        android:text="400" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="32dp"
                    android:background="@color/background_color1" />

                <TextView
                    android:id="@+id/tv_share"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:drawableLeft="@drawable/icon_share"
                    android:drawableRight="@drawable/icon_enter"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="32dp"
                    android:paddingTop="16dp"
                    android:drawablePadding="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/black"
                    android:text="分享给好友"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/background_color1" />

            </LinearLayout>


            <TextView
                android:id="@+id/versionCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:visibility="gone" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_radius"
                android:text="@string/quit_app"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </RelativeLayout>
    </LinearLayout>

    <include layout="@layout/base_title" />

</LinearLayout>


