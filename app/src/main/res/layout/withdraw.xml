<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myedittext2="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loginLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg"
    android:orientation="vertical">

    <include
        android:id="@+id/title_layout"
        layout="@layout/base_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/white">

                <View
                    android:id="@+id/v2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/background_color1" />

                <TextView
                    android:id="@+id/tv_usable_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_below="@+id/v2"
                    android:layout_marginLeft="22dp"
                    android:gravity="center"
                    android:text="可用余额"
                    android:textColor="@color/text_color1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_usable_balance_value"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/v2"
                    android:layout_marginRight="24dp"
                    android:gravity="center"
                    android:text="450.00元"
                    android:textColor="@color/text_color2"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/v3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/tv_usable_balance"
                    android:background="@color/background_color1"></View>

                <TextView
                    android:id="@+id/tv_bank"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_below="@+id/v3"
                    android:layout_marginLeft="22dp"
                    android:gravity="center"
                    android:text="银行"
                    android:textColor="@color/text_color1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_bank_value"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/v3"
                    android:layout_marginRight="24dp"
                    android:gravity="center"
                    android:text="中国招商银行"
                    android:textColor="@color/text_color2"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/v4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/tv_bank_value"
                    android:background="@color/background_color1"></View>

                <TextView
                    android:id="@+id/tv_handling_charge"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_below="@+id/v4"
                    android:layout_marginLeft="22dp"
                    android:gravity="center"
                    android:text="提现手续费"
                    android:textColor="@color/text_color1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_handling_charge_value"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/v4"
                    android:layout_marginRight="24dp"
                    android:gravity="center"
                    android:text="2.00元"
                    android:textColor="@color/text_color2"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/v5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/tv_handling_charge"
                    android:background="@color/background_color1" />

                <RelativeLayout
                    android:id="@+id/rl2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/v5"
                    android:background="@color/normal_bg">

                    <TextView
                        android:id="@+id/tv_birdcoin_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="24dp"
                        android:text="用2鸟币抵扣手续费" />
                </RelativeLayout>

                <View
                    android:id="@+id/v10"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/rl2"
                    android:background="@color/background_color1" />

                <TextView
                    android:id="@+id/tv_withdraw"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_below="@+id/v10"
                    android:layout_marginLeft="22dp"
                    android:gravity="center"
                    android:text="提现金额"
                    android:textColor="@color/text_color1"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/tv_withdraw_value"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/v10"
                    android:layout_marginRight="24dp"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="请输入金额"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:textColor="@color/text_color2"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/v6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/tv_withdraw"
                    android:background="@color/background_color1" />


                <TextView
                    android:id="@+id/tv_withdraw_get"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_below="@+id/v6"
                    android:layout_marginLeft="22dp"
                    android:gravity="center"
                    android:text="实际到账金额"
                    android:textColor="@color/text_color1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_withdraw_get_value"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/v6"
                    android:layout_marginRight="24dp"
                    android:gravity="center"
                    android:hint="0元"
                    android:textColor="@color/text_color2"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:background="@color/background_color1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp">


                <Button
                    android:id="@+id/btn_withdraw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/button_radius"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="提交"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/btn_withdraw"
                    android:layout_marginLeft="22dp"
                    android:src="@drawable/icon_help"

                    />

                <TextView
                    android:id="@+id/tv_withdraw_hint_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_withdraw"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="24dp"
                    android:layout_toRightOf="@+id/iv1"
                    android:drawablePadding="8dp"
                    android:gravity="left"
                    android:text="@string/with_draw_note"
                    android:textColor="@color/text_color3"
                    android:textSize="12dp" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
