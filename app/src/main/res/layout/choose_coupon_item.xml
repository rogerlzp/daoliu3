<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/rl_coupon1"
android:layout_width="match_parent"
android:layout_height="wrap_content">

<TextView
    android:id="@+id/tv_coupon_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="24dp"
    android:layout_marginTop="16dp"
    android:text="返现金券500元"
    android:textColor="@color/text_color1"
    android:textSize="16sp" />

<TextView
    android:id="@+id/tv_coupon_condition"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/tv_coupon_name"
    android:layout_marginLeft="24dp"
    android:layout_marginTop="8dp"
    android:text="返现金券500元"
    android:visibility="gone"
    android:textColor="@color/text_color1"
    android:textSize="12sp" />

<TextView
    android:id="@+id/tv_coupon_deadline"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/tv_coupon_condition"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="24dp"
    android:layout_marginTop="8dp"
    android:text="有效期为2016年12月15号"
    android:textColor="@color/text_color1"
    android:textSize="12sp" />


<ImageView
    android:id="@+id/iv_coupon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_marginRight="24dp"
    />

<View
    android:id="@+id/v7"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_alignParentBottom="true"
    android:layout_marginLeft="24dp"
    android:background="#E2E2E2" />
</RelativeLayout>
