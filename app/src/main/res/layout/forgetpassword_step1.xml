<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg"
    android:orientation="vertical">

    <include layout="@layout/base_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/background_color_F7" />

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl1"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/mobile_tv1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:background="@null"
            android:text="@string/mobile_num"
            android:textColor="@color/text_color1" />


        <EditText
            android:id="@+id/mobile_number_et1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/button_clear"
            android:layout_toRightOf="@id/mobile_tv1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@null"
            android:hint="@string/mobile_number_forgetpwd_hint"
            android:inputType="number"
            android:maxLength="11"
            android:paddingLeft="12dp"
            android:textColor="@color/text_color1"
            android:textColorHint="@color/label_grey1"
            android:textSize="16sp" />


        <ImageButton
            android:id="@+id/button_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/icon_delete"
            android:visibility="invisible" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl2"
        android:paddingLeft="18dp"
        android:paddingRight="18dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E2E2E2" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >


        <TextView
            android:id="@+id/mobile_tv2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingLeft="22dp"
            android:layout_centerVertical="true"
            android:text="@string/captcha"
            android:gravity="right"
            android:textColor="@color/text_color1" />


        <EditText
            android:id="@+id/captcha_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btn_captcha"
            android:layout_toRightOf="@id/mobile_tv2"
            android:background="@null"
            android:hint="@string/verifycode_hint"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:inputType="number"
            android:maxLength="4"
            android:paddingLeft="12dp"
            android:textColorHint="@color/label_grey1"
            android:textSize="16sp" />

        <View
            android:id="@+id/v2"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/btn_captcha"
            android:layout_centerVertical="true"
            android:background="@color/background_color1"
            android:orientation="vertical"
            />


        <TextView
            android:id="@+id/btn_captcha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:layout_marginRight="8dp"
            android:paddingBottom="10dp"
            android:textSize="16sp"
            android:text="@string/get_verify_code"

            android:textColor="@color/recommend" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl3"
        android:paddingLeft="18dp"
        android:paddingRight="18dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E2E2E2" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@id/rl4"
        android:visibility="invisible"
        >

        <TextView
            android:id="@+id/idcard_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:paddingLeft="22dp"
            android:text="@string/identity_card" />


        <EditText
            android:id="@+id/idcard_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/idcard_button_clear"
            android:layout_toRightOf="@id/idcard_tv1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColorHint="@color/label_grey1"
            android:background="@null"
            android:maxLength="18"
            android:paddingLeft="12dp"
            android:hint="@string/idcard_hint"
            android:textColor="@color/text_color2"
            android:textSize="16sp"
            android:textStyle="normal" />


        <ImageButton
            android:id="@+id/idcard_button_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/icon_delete"
            android:visibility="invisible" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl8"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/rl5"
        android:paddingLeft="18dp"
        android:layout_marginTop="30dp"
        android:paddingRight="18dp"
        android:paddingTop="22dp">


        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_radius"
            android:text="@string/btn_confirm_yes"
            android:enabled="false"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/white"
            android:textSize="18dp"/>

    </RelativeLayout>


</LinearLayout>