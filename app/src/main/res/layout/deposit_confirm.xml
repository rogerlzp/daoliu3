<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loginLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg"
    android:orientation="vertical">

    <include
        android:id="@+id/title_layout"
        layout="@layout/base_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@+id/iv1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/background_color1"></View>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/white">

                <View
                    android:id="@+id/v2"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/background_color1"></View>

                <TextView
                    android:id="@+id/tv_cardId"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_below="@+id/v2"
                    android:layout_marginLeft="22dp"
                    android:gravity="center"
                    android:text="@string/card_id"
                    android:textColor="@color/text_color1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_cardId_value"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/v2"
                    android:layout_marginRight="24dp"
                    android:gravity="center"
                    android:textColor="@color/text_color2"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/v3"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/tv_cardId"
                    android:background="@color/background_color1"></View>

                <TextView
                    android:id="@+id/tv_bank"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_below="@+id/v3"
                    android:layout_marginLeft="22dp"
                    android:gravity="center"
                    android:text="@string/bank"
                    android:textColor="@color/text_color1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_bank_value"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/v3"
                    android:layout_marginRight="24dp"
                    android:gravity="center"
                    android:textColor="@color/text_color2"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/v4"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/tv_bank"
                    android:background="@color/background_color1"></View>

                <TextView
                    android:id="@+id/tv_deposit"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_below="@+id/v4"
                    android:layout_marginLeft="22dp"
                    android:gravity="center"
                    android:text="@string/deposit_amount"
                    android:textColor="@color/text_color1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_deposit_value"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/v4"
                    android:layout_marginRight="24dp"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:maxLength="11"
                    android:textColor="@color/text_color2"
                    android:textColorHint="@color/label_grey1"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/v5"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/tv_deposit"
                    android:background="@color/background_color1" />

                <TextView
                    android:id="@+id/tv_deposit_get"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_below="@+id/v5"
                    android:layout_marginLeft="22dp"
                    android:gravity="center"
                    android:text="@string/get_amount"
                    android:textColor="@color/text_color1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_deposit_get_value"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/v5"
                    android:layout_marginRight="24dp"
                    android:gravity="center"
                    android:hint="0å…ƒ"
                    android:textColor="@color/text_color2"
                    android:textColorHint="@color/label_grey1"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/background_color1"></View>


            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <Button
                    android:id="@+id/btn_deposit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="22dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/button_radius"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/submit"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_hint_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_deposit"
                    android:layout_centerHorizontal="true"
                    android:drawableLeft="@drawable/icon_note"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="@string/deposit_note_amount"
                    android:textColor="@color/text_color3"
                    android:textSize="12dp"
                    android:visibility="invisible" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
